@import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap');

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

*, *:before, *:after {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}


.header3 {
    width: 100%;
    height: 100px;
    background-color: #FBFB9B;
    display: flex;
}

.header3 #logo {
    width: 328px;
    background-color: #D8D884;
    font-family: 'Montserrat', sans-serif;
    font-weight: 200;
    font-style: italic;
    font-size: 2.5rem;
    color: #413B3B;
    display: flex;
    align-items: center;
    justify-content: center;
}

.header3 #username {
    width: 952px;
    display: flex;
    align-items: center;
    justify-content: right;
    padding-right: 30px;
}

.header3 #username strong {
    font-family: 'Roboto', sans-serif;
    font-size: 1.375rem;
    font-weight: bold;
    color: black;
}

#content {
    display: flex;
}

#content aside {
    width: 328px;
    background-color: #C5C5C5;
    height: calc(100vh - 100px);
}

#content main {
    width: calc(1280px - 328px);
}

#profile {
    display: flex;
    align-items: center;
    margin-top: 20px;
    margin-left: 20px;
}

#profile div:nth-child(2) {
    padding-left: 5px;
}

#profile div:nth-child(2) h4 {
    font-family: 'Roboto', sans-serif;
    font-size: 18px;
    font-weight: bold;
    color: #424F3C;
    margin-bottom: 10px;
    background-color: #C5C5C5;
}

#profile div:nth-child(2) strong {
    font-family: 'Roboto', sans-serif;
    font-size: 15px;
    font-weight: 300;
    color: #424F3C;
}

#profile div:nth-child(2) strong b {
    color: #12FF66;
}

aside h5 {
    font-family: 'Roboto', sans-serif;
    font-size: 22px;
    font-weight: bold;
    width: 100%;
    background-color: #D9D9D9;
    text-align: center;
    padding: 5px;
    margin-top: 25px;
    margin-bottom: 25px;
}

.nav_dashboard ul {
    display: flex;
    flex-direction: column;
    align-items: left;
    margin-left: 20px;
    list-style: none;
    justify-content: center;
}

.nav_dashboard ul li {
    padding-top: 10px;
}

.nav_dashboard ul li a {
    text-decoration: none;
    color: #000;
    display: flex;
    align-items: center;
    font-family: 'Roboto', sans-serif;
    font-size: 18px;
    font-weight: 300;
}

.nav_dashboard ul li a i {
    font-size: 32px;
}

main h2 {
    font-family: 'Roboto', sans-serif;
    font-size: 26px;
    font-weight: 300;
    margin-left: 25px;
    margin-top: 40px;
    margin-bottom: 30px;
}

.title-normal {
    font-family: 'Roboto', sans-serif;
    font-size: 26px;
    font-weight: 300;
    margin-left: 0;
    margin-top: 0;
    margin-bottom: 0;
}

.text-center {
    text-align: center;
}

.padding-up-down {
    padding-top: 10px;
    padding-bottom: 10px;
}

main .table_information {
    width: 90%;
    margin: 0 auto;
}

main #form_book {
    width: 90%;
    margin: 0 auto;
}

main #form_book form {
    display: block;
}

main #form_book form label, input, select {
    width: 100%;
}

form label {
    display: inline-block;
    margin-top: 1px;
    margin-bottom: 1px;
    font-family: 'Roboto', sans-serif;
    font-size: 22px;
    font-weight: 300;
}

form input, select {
    margin-top: 5px;
    margin-bottom: 5px;
    height: 40px;
    border-radius: 5px;
    border: 1px solid rgba(0, 0, 0, 0.2);
    outline: none;
}

form input, select, option {
    font-family: 'Roboto', sans-serif;
    font-size: 18px;
    text-indent: 10px;
    font-weight: 300;
    background-color: #FFF;
}

form button {
    margin-top: 10px;
    font-family: 'Roboto', sans-serif;
    font-size: 14px;
    font-weight: bold;
    padding-top: 12px;
    padding-bottom: 12px;
    padding-left: 14px;
    padding-right: 14px;
    border-radius: 3px;
    border: 1px solid rgba(0, 0, 0, 0.2);
    color: #fff;
    background-color: #576073;
    cursor: pointer;
}

.information {
    display: flex;
    flex-direction: column;
}

.information hr {
    width: 90%;
    margin: 0 auto;
    filter: brightness(0.99) opacity(0.28);

}

.information .warning {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-bottom: 15px;
}

.warning p {
    font-family: 'Roboto', Sans-Serif;
    font-weight: 300;
    padding-right: 10px;
}

.information h1 {
    font-family: 'Roboto', Sans-Serif;
    font-weight: 200;
    text-indent: 32px;
    margin-bottom: 20px;
}

.information h1 strong {
    font-weight: 300;
    text-decoration: underline;
    color: #1f94ff;
}

.information .dash_button {
    font-family: 'Lato', sans-serif;
    text-decoration: none;
    color: #FFF;
    background: rgb(2, 0, 36);
    background: linear-gradient(342deg, rgba(2, 0, 36, 1) 0%, rgba(80, 80, 249, 1) 52%, rgba(0, 212, 255, 1) 100%);
    font-size: 22px;
    border: none;
    padding: 10px;
    border-radius: 10px;
    cursor: pointer;
    transition: 0.4s;
}

.dash_button:hover {
    filter: brightness(0.85) opacity(1);
}

.change_data {
    width: 90%;
    margin: 0 auto;
}

.alert-success {
    background-color: #dff0d8;
    border-color: #d6e9c6;
    color: #3c763d;
}

.alert-error {
    background-color: #f2dede;
    border-color: #ebccd1;
    color: #a94442;
}

.btn_show {
    font-family: 'Roboto', sans-serif;
    font-weight: bold;
    color: white;
    background-color: #007bff;
    text-decoration: none;
    font-size: 14px;
    text-align: center;
    padding: 15px 20px;
    margin-top: 15px;
    display: inline-block;
    border-radius: 4px;
    border: 1px solid #012347;
    transition: 0.4s ease;
}

.btn_show:hover {
    background-color: #00458f;
}

.btn_show i {
    margin-right: 5px;
}

.table_data_content, thead, th, td {
    border-collapse: collapse;
}

.table_data_content {
    width: 100%;
}

.table_data_content thead {
    background-color: #929285;
}

.table_data_content thead tr th {
    padding: 15px;
}

.table_data_content tbody tr {
    border-bottom: 1px solid #9BA5B7;
}

.table_data_content tbody tr td {
    text-align: center;
}

.table-header {
    background-color: #929285;
    color: #FFFFFF;
    border-top: 1px solid #838378;
}

.table-header td {
    padding-top: 2px !important;
    padding-bottom: 2px !important;
    padding-right: 0 !important;
    height: 10px !important;
    text-align: center;
    padding-left: 0px !important;
    color: #fff !important;
    font-size: 14px !important;
}

.table_data_content tbody tr td {
    font-family: 'Inter', Sans-Serif;
    font-size: 16px;
    color: #545F71;
    padding: 15px;
}

.check_id {
    width: 24px;
    height: 24px;
}

.check_id:checked {
    background-color: #545F71;
}

.text-left {
    text-align: left;
}

.table-title {
    font-family: 'Roboto', Sans-Serif;
    font-size: 22px;
    color: #FFF;
    font-weight: 800;
}


.button_action {
    font-family: 'Inter', Sans-Serif;
    font-size: 14px;
    color: #fff;
    padding: 5px 10px;
    text-align: center;
    font-weight: 600;
    text-decoration: none;
    border-radius: 4px;
    margin: 0 4px 0 4px;
}

.red {
    background-color: #F23939;
}

.green {
    background-color: #1B8842;
}

.blue {
    background-color: #007bff;
}

.yellow {
    color: #212529 !important;
    background-color: #ffc107;
    border-color: #ffc107 !important;
}

#info-msg {
    transition: opacity 1s ease;
}

.table-associations {
    margin-top: 15px;
}

.parts-name-manage {
    width: 80%;
    margin: 0 auto;
    border-collapse: collapse;
}

.table-header-part {
    border-collapse: collapse;
    border-bottom: 1px solid #444;
    background-color: #929285;
}

.table-header-title {
    border-collapse: collapse;
    font-family: 'Roboto', Sans-Serif;
    font-weight: 800;
    color: #FFFFFF;
    font-size: 22px;
    padding-top: 10px;
    padding-bottom: 10px;
    width: 50%;
}

.table-body-part {
    border-bottom: 1px solid #9BA5B7;
    text-align: center;
}

.table-body-content {
    font-family: 'Inter', Sans-Serif;
    font-size: 16px;
    color: #545F71;
    text-align: center;
    padding-top: 10px;
    padding-bottom: 10px;
}

.disassociate {
    background-color: #dc3545;
    border: none;
    color: #FFF;
    cursor: pointer;
    font-family: 'Inter', Sans-Serif;
    font-size: 14px;
    font-weight: 500;
    padding: 6px 6px;
    display: inline-block;
    border-radius: 4px;
    transition: 0.8s;
}

.disassociate:hover {
    background-color: #9b222e;
}

.new {
    padding: 50px;
}

.form-group {
    display: flex;
    align-items: center;
    gap: 3px;
    height: 30px;
}

.form-group input[type=checkbox] {
    display: block;
    width: 18px !important;
}

.form-group label {
    font-family: 'Lato', Sans-Serif;
    font-size: 18px;
    font-weight: initial;
    display: block;
}