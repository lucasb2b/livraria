  </header>
  <div id="login_form">
    <h4>Login</h4>
    <%= form_with(model: @user, url: sessions_path) do |form| %>
      <%= form.email_field :email, class: 'fields', placeholder: 'UsuÃ¡rio' %>
      <%= form.password_field :password, class: 'fields', placeholder: 'Senha' %>
      <div id="actions">
        <%= form.submit 'Entrar', id: 'singin'%>
        <a href="#">Esqueci a minha senha!</a>
      </div>
    <% end %>
